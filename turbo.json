{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_URL",
    "DATABASE_URL",
    "SALT_IP_ADDRESS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "lint": {
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
